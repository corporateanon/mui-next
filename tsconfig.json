{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"]
}
